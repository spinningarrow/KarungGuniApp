                </TableRow>
                <TableRow>
                <TextView
                        android:id="@+id/lbl_timing_s"
                        style="@style/TableBodyText"
                        android:text="From:"
                        />
                    <TextView
                    android:id="@+id/dt_timing_s"
                    style="@style/TableBodyText_notB"
                    android:gravity="left"
                    />
                </TableRow>
                <TableRow>
                <TextView
                        android:id="@+id/lbl_timing_e"
                        style="@style/TableBodyText"
                        android:text="To:"
                        />
                    <TextView
                            android:id="@+id/dt_timing_e"
                            style="@style/TableBodyText_notB"
                            android:gravity="left"
                            />
            </TableRow>


                <TableRow>

                    <TextView
                            android:id="@+id/lbl_desc"
                            style="@style/TableBodyText"
                            android:text="Description"
                            />

                    <TextView
                            android:id="@+id/dt_description"
                            style="@style/TableBodyText_notB"
                            android:gravity="left"
                            />


                </TableRow>
                <TableRow>
                    <Button
                            style="@style/NewAdButton"
                            android:text="Find the Location"
                            android:id="@+id/btn_gmap" />
                   </TableRow>
                <TableRow>
                    <Button
                            style="@style/NewAdButton"
                            android:text="Request Detail Address"
                            android:id="@+id/btn_request" />

                </TableRow>
                <TableRow>
                    <ImageView android:id="@+id/dt_img_view"
                               android:layout_width="500dp" android:layout_height="500dp"
                               android:scaleType="fitStart" android:visibility="gone"/>
                    <TextView  android:id="@+id/dt_dist"
                               android:layout_width="500dp" android:layout_height="500dp"
                               android:visibility="gone"/>
                </TableRow>




            </TableLayout>


