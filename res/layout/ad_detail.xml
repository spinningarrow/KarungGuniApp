        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

            <TableLayout

                    style="@style/TableBodyRow">
                <TableRow >
                    <TextView
                            android:id="@+id/dt_lbl_title"
                            style="@style/TableBodyText"
                            android:text="Title"
                            />

                    <TextView
                            android:id="@+id/dt_title"
                            style="@style/TableBodyText_notB"
                            android:gravity="left"
                            />
                </TableRow>
                <TableRow >
                    <TextView
                            android:id="@+id/lbl_cate"
                            style="@style/TableBodyText"
                            android:text="Category"
                            />

                    <TextView
                            android:id="@+id/dt_category"
                            style="@style/TableBodyText_notB"
                            android:gravity="left"
                             />
                </TableRow>

                <TableRow android:layout_width="wrap_content">

                    <TextView
                            android:id="@+id/lbl_owner"
                            style="@style/TableBodyText"
                            android:text="Seller"
                            />

                    <TextView
                            android:id="@+id/dt_owner"
                            style="@style/TableBodyText_notB"
                            android:gravity="left"
                            />

                </TableRow>

                <TableRow>

                    <TextView
                            android:id="@+id/lbl_addr"
                            style="@style/TableBodyText"
                            android:text="Address"
                            />

                    <TextView
                            android:id="@+id/dt_addr"
                            style="@style/TableBodyText_notB"
                            android:gravity="left"
                            />

                </TableRow>

                <TableRow>

                    <TextView
                            android:id="@+id/lbl_timing"
                            style="@style/TableBodyText"
                            android:text="Time Available"
                            />

                    <!--<TextView-->
